<dl class="display-menu incontext-action" tal:condition="viewlet/actions">
  <dt>Display layout</dt>
  <dd>
    <ul>
      <tal:actions repeat="action viewlet/actions">
	<li tal:define="selected python:action['action'] == viewlet.selected">
	  <a href="" tal:content="action/title"
	     tal:condition="not: selected"
	     tal:attributes="href string:${viewlet/contexturl}/dolmen.layout?layout=${action/action};
			     title action/title;"
	     />
	  <a tal:condition="selected"
	     name="selected_layout"
	     tal:attributes="title action/title;">
	    &bull; <span tal:content="action/title" />
	  </a>
	</li>
      </tal:actions>
    </ul>
  </dd>
</dl>
